<h2>Change Your Account Nickname</h2>

<form method="POST" action="/accounts/<%= @account.id%>">                   
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    Account Nickname: <input type="text" name="name" value="<%= @account.name %>">
    <input type="submit" value="submit">
</form><br><br>

<h2>Update Your Balance</h2>
<form method="POST" action="/accounts/<%= @account.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    Update Amount: <input type="number" min="1" name="balance" required>
    <input type="submit" value="submit">
</form>