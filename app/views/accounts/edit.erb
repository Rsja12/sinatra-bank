<h2>Edit Your Account</h2><br><br>

<form method="POST" action="/accounts/<%= @account.id%>">                   
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    Account Nickname: <input type="text" name="name" value="<%= @account.name %>" required>
    Update Amount: <input type="number" step="any" min="1" name="balance" value="<%= @account.balance %>" required>
    <input type="submit" value="submit">
</form><br><br>

